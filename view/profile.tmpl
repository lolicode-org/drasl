        action="{{ .App.FrontEndURL }}/drasl/delete-user"
        method="post"
        onsubmit="return confirm('您确定吗？此操作不可逆。');"
      >
        <input hidden name="username" value="{{ .ProfileUser.Username }}" />
        <input
          hidden
          name="returnUrl"
          value="{{ if .AdminView }}
            {{ .App.FrontEndURL }}/drasl/admin
          {{ else }}
            {{ .App.FrontEndURL }}
          {{ end }}"
        />
        <input type="submit" value="🗙 删除账号" />
      </form>
    </details>
